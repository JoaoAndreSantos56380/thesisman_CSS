<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ul.fc.di.css.javafxexample.presentation.control.ThesisDefenseRightPanelController" prefWidth="200" spacing="10">
    <Label fx:id="noSelectionLabel" text="Please select a defense" />
    <VBox fx:id="detailsBox" spacing="5" visible="false">
        <VBox>
            <Text text="Defense of Thesis: " style="-fx-font-weight: bold;" />
            <Label fx:id="topicLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Grade: " style="-fx-font-weight: bold;" />
            <Label fx:id="gradeLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Location: " style="-fx-font-weight: bold;" />
            <Label fx:id="locationLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Time: " style="-fx-font-weight: bold;" />
            <Label fx:id="timeLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
    </VBox>
</VBox>
