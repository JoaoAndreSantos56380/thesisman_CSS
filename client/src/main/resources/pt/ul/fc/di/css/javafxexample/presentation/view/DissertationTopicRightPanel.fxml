<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.TextFlow?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ul.fc.di.css.javafxexample.presentation.control.DissertationTopicRightPanelController" prefWidth="200" spacing="10">
    <Label fx:id="noSelectionLabel" text="Select a topic to view details" />
    <VBox fx:id="detailsBox" visible="false" spacing="5">
        <VBox>
            <Text text="ID: " style="-fx-font-weight: bold;" />
            <Label fx:id="idLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Type: " style="-fx-font-weight: bold;" />
            <Label fx:id="typeLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Title: " style="-fx-font-weight: bold;" />
            <Label fx:id="titleLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Description: " style="-fx-font-weight: bold;" />
            <Label fx:id="descriptionLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Salary: " style="-fx-font-weight: bold;" />
            <Label fx:id="salaryLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Submitter: " style="-fx-font-weight: bold;" />
            <Label fx:id="submitterLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Compatible Masters: " style="-fx-font-weight: bold;" />
            <Label fx:id="compatibleMastersLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <Button text="APPLY" style="-fx-background-color: green; -fx-text-fill: white;" onAction="#handleApplyButton"/>

    </VBox>
</VBox>
