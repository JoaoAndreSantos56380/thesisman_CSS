<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ul.fc.di.css.javafxexample.presentation.control.ApplicationRightPanelController" prefWidth="200" spacing="10">
    <Label fx:id="noSelectionLabel" text="Please select an application" />
    <VBox fx:id="detailsBox" spacing="5" visible="false">
        <VBox>
            <Text text="Application to Topic: " style="-fx-font-weight: bold;" />
            <Label fx:id="applicationDetailsLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <Button text="CANCEL APPLICATION" style="-fx-background-color: red; -fx-text-fill: black;" onAction="#handleCancelButton" />
    </VBox>
</VBox>
