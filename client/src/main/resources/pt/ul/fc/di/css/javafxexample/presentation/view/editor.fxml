<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="pt.ul.fc.di.css.javafxexample.presentation.control.EditorController" xmlns:fx="http://javafx.com/fxml/1" hgap="5" vgap="5">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
    </columnConstraints>
    
    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/> 
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/> 
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/> 
    <Label text="Student Number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/> 
    <Label text="Average Grade:" GridPane.columnIndex="0" GridPane.rowIndex="4"/> 
    <Label text="Master:" GridPane.columnIndex="0" GridPane.rowIndex="5"/> 

    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" /> 
    <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" /> 
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="2" /> 
    <TextField fx:id="studentNumberField" GridPane.columnIndex="1" GridPane.rowIndex="3" /> 
    <TextField fx:id="averageGradeField" GridPane.columnIndex="1" GridPane.rowIndex="4" /> 
    <TextField fx:id="masterField" GridPane.columnIndex="1" GridPane.rowIndex="5" /> 
    
    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>
</GridPane>
