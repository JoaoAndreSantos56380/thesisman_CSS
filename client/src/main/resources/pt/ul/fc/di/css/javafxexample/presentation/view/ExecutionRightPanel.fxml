<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ul.fc.di.css.javafxexample.presentation.control.ExecutionRightPanelController" prefWidth="200" spacing="10">
    <Label fx:id="noSelectionLabel" text="Please select an execution topic" />
    <VBox fx:id="detailsBox" spacing="5" visible="false">
        <VBox>
            <Text text="Execution Topic: " style="-fx-font-weight: bold;" />
            <Label fx:id="executionTopicNameLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Advisor: " style="-fx-font-weight: bold;" />
            <Label fx:id="advisorNameLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
        <VBox>
            <Text text="Execution Year: " style="-fx-font-weight: bold;" />
            <Label fx:id="yearLabel" wrapText="true" maxWidth="Infinity" />
        </VBox>
    </VBox>
</VBox>
